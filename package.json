{
    "name": "@lnmp/lnmp",
    "version": "0.1.0",
    "description": "LNMP Protocol - Meta package providing unified access to all LNMP modules",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.mjs",
            "require": "./dist/index.js"
        }
    },
    "files": [
        "dist",
        "README.md"
    ],
    "scripts": {
        "build": "npm run build:wasm && tsup src/index.ts --format cjs,esm --dts --clean",
        "build:wasm": "node scripts/build-wasm.js",
        "test": "jest",
        "clean": "rm -rf dist src/wasm"
    },
    "dependencies": {},
    "devDependencies": {
        "tsup": "^8.0.0",
        "typescript": "^5.0.0",
        "jest": "^29.0.0",
        "ts-jest": "^29.0.0",
        "@types/jest": "^29.0.0",
        "@types/node": "^20.0.0",
        "semantic-release": "^23.0.0",
        "@semantic-release/commit-analyzer": "^11.0.0",
        "@semantic-release/release-notes-generator": "^12.0.0",
        "@semantic-release/changelog": "^6.0.0",
        "@semantic-release/exec": "^6.0.0",
        "@semantic-release/git": "^10.0.0",
        "@semantic-release/github": "^9.0.0"
    },
    "keywords": [
        "lnmp",
        "sdk",
        "typescript",
        "llm",
        "protocol"
    ],
    "author": "LNMP Team",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/lnmplang/lnmp-sdk-js.git"
    },
    "publishConfig": {
        "access": "public"
    }
}